{
  "compilerOptions": {
    "target": "es2023",
    "module": "es2022",
    "sourceMap": false,
    "moduleResolution": "node",
    "declaration": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/*",
    "./lib/*"
  ]
}
